{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "jsx": "react",
    "strict": true
  },
  "include": ["src", "types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
